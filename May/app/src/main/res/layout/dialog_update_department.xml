<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/bg_radius_left_right"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="CẬP NHẬT CÔNG VIỆC"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phòng ban:"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu:"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:id="@+id/department_title"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trưởng phòng:"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/manager"
                android:textColor="@color/black"
                android:layout_marginEnd="10sp"
                android:textSize="16dp"/>
            <ImageView
                android:id="@+id/img_manager"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_employee" />

        </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10sp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/browser_actions_bg_grey"
            android:layout_marginEnd="10sp"
            android:text="Hủy bỏ"

            android:background="@drawable/bg_radius"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:layout_marginStart="10sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_radius"
            android:backgroundTint="#DF2196F3"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>