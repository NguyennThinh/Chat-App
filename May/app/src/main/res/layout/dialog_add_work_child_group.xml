<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/bg_radius_left_right"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="THÊM CÔNG VIỆC"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên công việc:  "
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/work_name"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả:  "
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:id="@+id/work_description"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian:  "
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ:   "
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/work_start"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/imgStart"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến:  "
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/work_end"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/imgEnd"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_date"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người phụ trách:"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spLeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/browser_actions_bg_grey"/>







    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10sp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/browser_actions_bg_grey"
            android:layout_marginEnd="10sp"
            android:text="Hủy bỏ"

            android:background="@drawable/bg_radius"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Thêm"
            android:layout_marginStart="10sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_radius"
            android:backgroundTint="#DF2196F3"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>