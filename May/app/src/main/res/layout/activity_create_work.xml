<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ViewManager.CreateWork">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue_tool"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/return_activity"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Tạo công việc"
            android:textColor="@color/white"
            android:textSize="19dp" />

    </RelativeLayout>



        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_attendance"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/work_name"
                android:hint="Tên công việc"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/bg_attendance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_create"
                android:hint="Người tạo công việc"
                android:textColorHint="@color/black"
                android:enabled="false"
                android:textSize="12sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/bg_attendance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/work_description"
                android:hint="Mô tả công việc"
                android:textSize="12sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Thời gian"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:layout_marginStart="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"

                android:layout_marginEnd="10dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:background="@drawable/bg_attendance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/work_start"
                    android:hint="Từ"
                    android:layout_weight="1"
                    android:textSize="12sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/date_start"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_date"
                />


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"

                android:layout_marginEnd="10dp"
                android:paddingLeft="10sp"
                android:background="@drawable/bg_attendance"
                android:paddingRight="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/work_end"
                    android:hint="Đến"
                    android:layout_weight="1"
                    android:textSize="12sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/date_end"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_date"
                android:layout_height="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15sp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"

                android:layout_marginEnd="10dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:background="@drawable/bg_attendance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_in_change"
                    android:hint="Người phụ trách công việc"
                    android:layout_weight="1"
                    android:textSize="12sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/img_user_change"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_work" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Thêm thành viên"/>

            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/add_participant"
                android:layout_width="24dp"
                android:src="@drawable/ic_add"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layout_name"
                android:background="@drawable/bg_radius10"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#efefefef"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:hint="Chọn phòng ban"
                    android:backgroundTint="#efefefef"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/filter_department"/>

                <ImageView
                    android:id="@+id/img_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_drop_down" />
            </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_participant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_create_work"
            android:padding="10sp" />

        <Button
            android:id="@+id/btn_create_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_radius"
            android:backgroundTint="@color/blue_tool"
            android:paddingHorizontal="20sp"
            android:text="Tạo công việc"
            android:textColor="@color/white" />
    </RelativeLayout>




</LinearLayout>