<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewManager.ListDepartment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_single_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/blue_tool">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DANH SÁCH PHÒNG BAN"
                android:textColor="@color/white"
                android:textSize="20sp" />

          <ImageView
              android:id="@+id/img_add_department"
              android:layout_width="30sp"
              android:layout_height="30sp"
              android:layout_centerVertical="true"
              android:layout_marginEnd="10dp"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_add_department" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_department"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_single_chat"
        android:padding="10dp" />
</RelativeLayout>