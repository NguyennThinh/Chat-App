<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/user_sender_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"
        android:id="@+id/message_text"/>

    <LinearLayout
        android:id="@+id/layout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_radius10"
        android:backgroundTint="@color/gray_light"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/message_video"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:visibility="gone" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_message_file"
        android:layout_marginStart="10dp"

        android:background="@drawable/bg_radius10"
        android:backgroundTint="@color/gray_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Ã¡dadasd"
            android:maxWidth="150dp"
            android:textColor="@color/black"
            android:id="@+id/file_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/file_size"
            android:layout_below="@id/file_name"
            android:text="adasdada"/>

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/file_name"
            android:src="@drawable/word"/>
    </RelativeLayout>
</LinearLayout>